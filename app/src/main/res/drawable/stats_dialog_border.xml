<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del elemento con el borde -->
    <item>
        <shape android:shape="rectangle">
            <!-- Color de fondo -->
            <solid android:color="@color/secondBackground" />
        </shape>
    </item>
    <!-- Borde -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <!-- Color del borde -->
            <stroke
                android:width="3dp"
                android:color="@color/white" />
        </shape>
    </item>
</layer-list>
